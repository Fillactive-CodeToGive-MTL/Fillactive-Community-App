<body>
<div class="login-form-page">
  <div class="row s12">
    <div class="col s3">
      <ul id="slide-out" class="sidenav sidenav-fixed">
        <a href="/"><img src="/images/fitspirit-logo.jpg" width="300px"></a>
      </ul>
    </div>

    <div class="col s9 valign-wrapper" style="height: 50em;">

      <div class="row" id="login_form">

      <h1 id="login-form-title">Fillactive Community App</h1>

      <form action="/users/userlogin" method="POST" id="user_login" class="col s12">
        <div class="row">
          <% if (loginerror) { %>
            <div class="row">
              <h4 class=""><%= loginerrormessage %> </h4>
            </div>
          <% } %> 
          <div class="input-field col s8 center">
            <input id="username" name="username" type="email" class="validate">
            <label for="username" class="login-form-label">username</label>
          </div>
          <div class="input-field col s8">
            <input id="password" name="password" type="password" class="validate">
            <label for="password" class="login-form-label">password</label>
          </div>
        </div>
        <div class="row">
          <button class="btn waves-effect waves-light roleBtn" type="submit">Submit</button>
        </div>
      </form>
    </div>

    </div>
  </div>
</div>
